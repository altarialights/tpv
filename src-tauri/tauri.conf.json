{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tpv",
  "version": "0.1.0",
  "identifier": "com.altarialights.tpv",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tpv",
        "width": 800,
        "height": 600,
        "decorations": false,
        "label": "main"
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: https:; img-src 'self' asset: http://asset.localhost https://asset.localhost blob: data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/logo.png"
    ]
  }
}